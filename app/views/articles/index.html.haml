- if @tag
  filtered by tag:
  = link_to @tag, articles_path(tag: @tag)
  |
  = link_to 'remove filter', articles_path
%br
- if @author
  filtered by author:
  = link_to @author, articles_path(author: @author)
  |
  = link_to 'remove filter', articles_path
%br
%br
- @articles.each do |article|
  %p
    = link_to article.title, article_path(article)